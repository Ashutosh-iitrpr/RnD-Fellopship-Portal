generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


enum Role {
  ADMIN
  RND_CELL
  PI
  VIEWER
}

model Department {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?
  createdAt DateTime @default(now())

  users     User[]
  projects  Project[]   
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  entryNumber String   @unique
  role        Role
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  deptId      String?
  department  Department? @relation(fields: [deptId], references: [id])

  projects    Project[]   // ðŸ‘ˆ ADD THIS
}


model Otp {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model FundingAgency {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?
  createdAt DateTime @default(now())

  projects  Project[]   
}


enum DesignationType {
  FELLOWSHIP
  PROJECT_STAFF
}

model Designation {
  id                  String          @id @default(uuid())
  code                String          @unique
  name                String
  type                DesignationType
  hraApplicable       Boolean
  coTerminusWithProject Boolean
  notes               String?
  createdAt           DateTime        @default(now())
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ON_HOLD
}

model Project {
  id               String         @id @default(uuid())
  projectNumber    String         @unique
  title            String
  deptId           String
  piUserId         String
  fundingAgencyId  String
  startDate        DateTime
  endDate          DateTime
  status           ProjectStatus  @default(ACTIVE)
  createdAt        DateTime       @default(now())

  department       Department     @relation(fields: [deptId], references: [id])
  pi               User           @relation(fields: [piUserId], references: [id])
  fundingAgency    FundingAgency  @relation(fields: [fundingAgencyId], references: [id])

  sanctions ProjectSanction[]

}


enum SanctionStatus {
  REQUESTED
  COMMITTED
  RECEIVED
  REJECTED
}

model ProjectSanction {
  id            String         @id @default(uuid())
  projectId     String
  amount        Float
  sanctionDate  DateTime
  status        SanctionStatus @default(REQUESTED)
  reference     String?
  notes         String?
  createdAt     DateTime       @default(now())

  project       Project        @relation(fields: [projectId], references: [id])
}
