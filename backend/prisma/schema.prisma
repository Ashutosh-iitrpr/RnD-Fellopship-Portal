generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


enum Role {
  ADMIN
  RND_CELL
  PI
  VIEWER
}

model Department {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?
  createdAt DateTime @default(now())

  users     User[]
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  entryNumber String   @unique
  role        Role
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  deptId      String?
  department  Department? @relation(fields: [deptId], references: [id])
}

model Otp {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model FundingAgency {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?
  createdAt DateTime @default(now())
}

enum DesignationType {
  FELLOWSHIP
  PROJECT_STAFF
}

model Designation {
  id                  String          @id @default(uuid())
  code                String          @unique
  name                String
  type                DesignationType
  hraApplicable       Boolean
  coTerminusWithProject Boolean
  notes               String?
  createdAt           DateTime        @default(now())
}
