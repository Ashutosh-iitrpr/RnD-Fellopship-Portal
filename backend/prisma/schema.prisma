generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


enum Role {
  ADMIN
  RND_CELL
  PI
  VIEWER
}

model Department {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?
  createdAt DateTime @default(now())

  users     User[]
  projects  Project[]   
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  entryNumber String   @unique
  role        Role
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  deptId      String?
  department  Department? @relation(fields: [deptId], references: [id])

  projects    Project[]   // ðŸ‘ˆ ADD THIS
}


model Otp {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model FundingAgency {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?
  createdAt DateTime @default(now())

  projects  Project[]   
}


enum DesignationType {
  FELLOWSHIP
  PROJECT_STAFF
}

model Designation {
  id                  String          @id @default(uuid())
  code                String          @unique
  name                String
  type                DesignationType
  hraApplicable       Boolean
  coTerminusWithProject Boolean
  notes               String?
  createdAt           DateTime        @default(now())

  appointments        ProjectAppointment[]
  appointmentChanges  AppointmentChange[]
  rateCards           RateCard[]
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ON_HOLD
}

model Project {
  id               String         @id @default(uuid())
  projectNumber    String         @unique
  title            String
  deptId           String
  piUserId         String
  fundingAgencyId  String
  startDate        DateTime
  endDate          DateTime
  status           ProjectStatus  @default(ACTIVE)
  createdAt        DateTime       @default(now())

  department       Department     @relation(fields: [deptId], references: [id])
  pi               User           @relation(fields: [piUserId], references: [id])
  fundingAgency    FundingAgency  @relation(fields: [fundingAgencyId], references: [id])

  sanctions ProjectSanction[]
  extensions ProjectExtension[]
  ledgerEntries ProjectFundLedger[]
  appointments ProjectAppointment[]

}


enum SanctionStatus {
  REQUESTED
  COMMITTED
  RECEIVED
  REJECTED
}

enum LedgerEntryType {
  RECEIPT
  DISBURSEMENT
  ADJUSTMENT
}

enum CityClass {
  A
  B
  C
}

enum PayrollRunStatus {
  DRAFT
  FINALIZED
  CANCELLED
}

model ProjectSanction {
  id            String         @id @default(uuid())
  projectId     String
  amount        Float
  sanctionDate  DateTime
  status        SanctionStatus @default(REQUESTED)
  reference     String?
  notes         String?
  createdAt     DateTime       @default(now())

  project       Project        @relation(fields: [projectId], references: [id])
}

model ProjectExtension {
  id          String   @id @default(uuid())
  projectId   String
  oldEndDate  DateTime
  newEndDate  DateTime
  reason      String?
  createdAt   DateTime @default(now())

  project     Project  @relation(fields: [projectId], references: [id])
}

model ProjectFundLedger {
  id          String          @id @default(uuid())
  projectId   String
  entryType   LedgerEntryType
  amount      Float
  reference   String?
  notes       String?
  createdAt   DateTime @default(now())

  project     Project @relation(fields: [projectId], references: [id])
}

model Person {
  id        String   @id @default(uuid())
  name      String
  email     String?  @unique
  phone     String?
  createdAt DateTime @default(now())

  bankAccounts   BankAccount[]
  appointments   ProjectAppointment[]
}

model BankAccount {
  id            String  @id @default(uuid())
  personId      String
  bankName      String
  accountNumber String
  ifsc          String
  isPrimary     Boolean @default(true)

  person        Person  @relation(fields: [personId], references: [id])
}

model ProjectAppointment {
  id            String   @id @default(uuid())
  projectId     String
  personId      String
  designationId String
  startDate     DateTime
  endDate       DateTime
  createdAt     DateTime @default(now())

  project       Project     @relation(fields: [projectId], references: [id])
  person        Person      @relation(fields: [personId], references: [id])
  designation   Designation @relation(fields: [designationId], references: [id])

  changes       AppointmentChange[]
  hraSettings   AppointmentHraSetting[]
  attendance    AttendanceMonthly[]
  payrollLines  PayrollLine[]
  recoveries    Recovery[]
}

model AppointmentChange {
  id             String   @id @default(uuid())
  appointmentId  String
  effectiveFrom  DateTime
  designationId  String?
  endDate        DateTime?
  reason         String?
  createdAt      DateTime @default(now())

  appointment    ProjectAppointment @relation(fields: [appointmentId], references: [id])
  designation    Designation?       @relation(fields: [designationId], references: [id])
}

model RateCard {
  id             String   @id @default(uuid())
  designationId  String
  effectiveFrom  DateTime
  effectiveTo    DateTime?
  baseSalary     Float
  hraPercent     Float
  createdAt      DateTime @default(now())

  designation    Designation @relation(fields: [designationId], references: [id])
}

model HraRate {
  id         String    @id @default(uuid())
  cityClass  CityClass
  percent    Float
  createdAt  DateTime  @default(now())
}

model AppointmentHraSetting {
  id             String    @id @default(uuid())
  appointmentId  String
  cityClass      CityClass
  effectiveFrom  DateTime
  effectiveTo    DateTime?
  createdAt      DateTime  @default(now())

  appointment    ProjectAppointment @relation(fields: [appointmentId], references: [id])
}

model AttendanceMonthly {
  id             String   @id @default(uuid())
  appointmentId  String
  month          String
  daysPresent    Int
  daysAbsent     Int
  approved       Boolean  @default(false)
  approvedAt     DateTime?
  createdAt      DateTime @default(now())

  appointment    ProjectAppointment @relation(fields: [appointmentId], references: [id])
}

model PayrollRun {
  id        String           @id @default(uuid())
  month     String
  status    PayrollRunStatus @default(DRAFT)
  createdAt DateTime         @default(now())

  lines     PayrollLine[]
}

model PayrollLine {
  id            String   @id @default(uuid())
  payrollRunId  String
  appointmentId String
  gross         Float
  deductions    Float
  net           Float
  notes         String?
  createdAt     DateTime @default(now())

  payrollRun    PayrollRun         @relation(fields: [payrollRunId], references: [id])
  appointment   ProjectAppointment @relation(fields: [appointmentId], references: [id])
}

model Recovery {
  id            String   @id @default(uuid())
  appointmentId String
  amount        Float
  reason        String?
  createdAt     DateTime @default(now())

  appointment   ProjectAppointment @relation(fields: [appointmentId], references: [id])
}
